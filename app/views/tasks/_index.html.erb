<div class="container tasks" data-controller="toggle">
  <div>
    <%= image_tag 'tasks_02.svg', alt: "Home", style:"height:150px; width:100%"%>
  </div>
  <h2> Tasks </h2>
  <% @tasks.each do |task| %>
    <div class="task">
      <div class="form-check">
        <%= form_with url: toggle_status_task_path(task), method: :patch, remote: true do |f| %>
          <%= f.check_box :status, class: "form-check-input", id: "flexCheckDefault", checked: task.status, onclick: 'this.form.submit();' %>
        <% end %>
        <p data-action="click->toggle#show_detail" data-task-id="<%= task.id %>"><%= task.name %></p>
      </div>
      <div class="task-detail d-none" data-toggle-target="togglableDetail" data-task-id="<%= task.id %>">
        <%= render 'tasks/task_detail', task: task %>
      </div>
    </div>
  <% end %>
  <div class="task-form-wrap">
    <button type="button" class="btn my-btn-green" data-action="click->toggle#show_form">Add Task</button>
    <div class="task-form d-none" data-toggle-target="togglableForm">
      <%= render 'tasks/form' %>
    </div>
  </div>
</div>
