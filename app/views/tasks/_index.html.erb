<div class="container tasks" data-controller="toggle">
  <div>
    <%= image_tag 'tasks_02.svg', alt: "Home", style:"height:150px; width:100%", class:"mt-4"%>
  </div>
  <h2>TO DO LIST</h2>
  <div class="default-tasks">
    <div class="toilet" data-action="click->toggle#show_form_toilet">
      <i class="fa-solid fa-toilet"></i><p>TOILET</p>
      <div class="togglable-form d-none" data-toggle-target="togglableFormToilet">
        <%= render 'tasks/togglable_toilet_form' %>
      </div>
    </div>

    <div class="walk" data-action="click->toggle#show_form_walk">
      <i class="fa-solid fa-person-walking"></i><i class="fa-solid fa-dog"></i><p>WALKING</p>
      <div class="togglable-form d-none" data-toggle-target="togglableFormWalk">
        <%= render 'tasks/togglable_walk_form' %>
      </div>
    </div>

    <div class="feed" data-action="click->toggle#show_form_feed">
      <i class="fa-solid fa-bowl-food"></i><p>FEEDING</p>
      <div class="togglable-form d-none" data-toggle-target="togglableFormFeed">
        <%= render 'tasks/togglable_feed_form' %>
      </div>
    </div>
  </div>
  <%# calendar %>
  <%= render 'tasks/calendar' %>
</div>
