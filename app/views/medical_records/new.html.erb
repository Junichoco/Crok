<div class="container col-12 col-md-6">
  <h2>Add Medical Record</h2>
  <%= link_to "Go back", dog_medical_records_path(@dog) %>
  <%= simple_form_for [@dog, @medical_record], html: { multipart: true } do |f| %>
    <p>Date<%= f.input :date, as: :string, input_html: { data: { controller: "datepicker" } }, label: false %></p>
    <%= f.input :description %>
    <%= f.input :vet_contact %>
    <!-- File input for photos -->
    <div class="form-group">
      <%= f.label :pictures, "Upload Photos" %>
      <%= f.file_field :pictures, multiple: true, direct_upload: true %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-info my-3" %>
    </div>
  <% end %>
</div>
