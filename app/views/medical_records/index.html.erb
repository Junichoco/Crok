<div class="container" style="background-color: #ffc65a; padding: 10px; margin-bottom: 30px">
  <div class="row">
    <div class="col-md-12 text-center">
      <div class="dog-show">
        <div class="dog-profile">
          <%# <img src="dog_image.jpg" alt="Dog's profile picture"> %>
          <h1><%= @dog.name %>'s Medical Records</h1>
          <p>Breed: <%= @dog.breed.capitalize %></p>
          <p>Birthdate: <%= @dog.birthdate.strftime("%B %d, %Y") %></p>
          <p><%= @dog.sex.titlecase %></p>
          <p>Allergies: <%= @dog.allergies.capitalize %></p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container col-6 col-md-6">
  <div class="row">
    <div class="text-center">
      <div class="buttons mt-3">
        <button><%= link_to "Add new record", "medical_records/new", class: "btn" %></button>
        <button><%= link_to "Fitness History", :dog_id_health, class: "btn" %></button>
      </div>
    </div>
  </div>
</div>
<div class="container col-md-6 justify-content-center align-items-center">
  <div class="last-updates">
    <div class="last-update">
      <% if @medical_records.empty? %>
        <p>No medical records added</p>
      <% else %>
        <% @medical_records.each_slice(2) do |slice| %>
          <div class="col-12 mb-3">
            <div class="row">
              <% slice.each do |record| %>
                <div class="col-md-6 col-12">
                  <div class="health-card">
                    <%= link_to dog_medical_record_path(record.dog, record) do %>
                      <%= image_tag 'dog_med_banner_01.svg', alt: 'Image phone', class: 'small-card' %>
                    <% end %>
                    <p><strong>Date of creation: </strong><%= record.date.strftime("%B %d, %Y") %></p>
                    <p><strong>Description: </strong><%= record.description %></p>
                    <p><strong>Veterinarian: </strong><%= record.vet_contact %></p>
                    <div class="card-buttons">
                      <%= link_to "Edit", edit_medical_record_path(record), class: "btn btn-outline-primary" %>
                      <%= link_to "Delete", medical_record_path(record), class: "btn btn-outline-primary", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this entry?" } %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<br>
<%= render 'shared/bottom_nav' %>
