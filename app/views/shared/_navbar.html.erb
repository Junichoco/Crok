<div class="banner-container d-flex justify-content-between align-items-center">
  <% if user_signed_in? %>
    <%= link_to home_path do %>
      <%= image_tag "banner_icn.svg", alt: "Crok Logo", class: "banner-image" %>
    <% end %>
  <% else %>
    <%= link_to root_path do %>
      <%= image_tag "banner_icn.svg", alt: "Crok Logo", class: "banner-image" %>
    <% end %>
  <% end %>
  <% unless user_signed_in? %>
    <div class="log-button-container">
      <%= link_to 'Features', features_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
  <div class="log-button-container">
    <%= render 'shared/logbtn' %>
  </div>
</div>
