<div class="container">
  <div class="row justify-content-center">
    <div class="d-flex justify-content-center dog-profile">
      <% if @dog && @dog.photos.any? %>
        <%= cl_image_tag @dog.photos.first.key %>
      <% else %>
        <p>No photo available</p>
      <% end %>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-6 mt-4">
          <%= link_to dog_medical_records_path(@dog) do %>
            <%= image_tag 'icon_sub/records.png', alt: "records", class: 'img-fluid' %>
          <% end %>
        </div>
        <div class="col-6 mt-4">
          <%= link_to new_dog_health_track_path(@dog) do %>
            <%= image_tag 'icon_sub/tracks.png', alt: "health_track", class: 'img-fluid' %>
          <% end %>
        </div>
      </div>
    </div>
    <%= render 'tasks/index'%>
    <div class="dog-health-track">
      <% health_tracks_of_this_dog = @health_tracks.where(dog_id: @dog.id) %>
      <div class="health-history-track col-12 col-md-8 col-lg-6">
        <%= render 'health_tracks/score_history', health_tracks: health_tracks_of_this_dog, dog: @dog %>
      </div>
      <div class="latest-health-track col-12 col-md-8 col-lg-6">
        <% if health_tracks_of_this_dog.size > 0 %>
          <% latest_health_track = health_tracks_of_this_dog.order(date: :asc).last %>
          <%= render 'health_tracks/latest_health_track', latest_health_track: latest_health_track %>
        <% end %>
      </div>
    </div>
  </div>
  <br>
  <div class="d-flex justify-content-center">
    <div class="medical-record-link row">
      <%= link_to dog_medical_records_path(@dog) do %>
        <%= image_tag 'medical_eam_btn.svg', alt: "medic"%>
      <% end %>
    </div>
    <div class="dog-health-track">
      <%= link_to dog_health_path(@dog) do %>
        <%= image_tag 'dog_fitness.svg', alt: "health_track"%>
      <% end %>
    </div>
  </div>
</div>
