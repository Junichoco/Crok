<div class="container col-6">
  <h1><%= @dog.name %></h1>
  <% if !@dog.photos.empty? %>
    <%= cl_image_tag @dog.photos[0].key, width: 300, height: 220, crop: :fill %>
  <% end %>
  <p><%= link_to "View Health Information", :dog_health %>
  <p><strong>Breed: </strong><%= @dog.breed %></p>
  <p><strong>Sex: </strong><%= @dog.sex %>
  <p><strong>Birthdate: </strong><%= @dog.birthdate %></p>
  <p><strong>Allergies: </strong><%= @dog.allergies %></p>

  <%# <div class="col-6">
    <%= cl_image_tag @dog.photos[0].key, width: 300, height: 220, crop: :fill %>
  <%# <div> %>

  <h2>Tasks</h2>
  <% @tasks.each do |task| %>
    <p><%= task.name %></p>
    <p><%= task.status %></p>
  <% end %>
</div>
