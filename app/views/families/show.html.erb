<div class="container text-center mt-5 mb-20">
   <div class="row">
      <div class="col-11">
  <div class="container col-6">
    <h1>Family Name</h1>
    <p><%= render "families/family-form", family: @family %></p>
  </div>
  <!--Change/update the name of the family-->
  <h1><%= current_user.family.name%></h1>
  <% current_user.family.users.each do |user|%>
    <!--Add / invite a user inside the family (by link or input)-->
    <h2><%= user.name %>  <%= link_to "", data: { turbo_method: "delete", turbo_confirm: "Are you sure to delete this review?" }, class:"text-decoration-none" do %>
        <i class="fa-solid fa-trash"></i>
      <% end %></h2>
    <!--Remove a user from the family-->
  <% end %>
  <h1>Dogs</h1>
  <% current_user.family.dogs.each do |dog|%>
    <h2><%= dog.name %> <%= link_to "", data: { turbo_method: "delete", turbo_confirm: "Are you sure to delete this review?" }, class:"text-decoration-none" do %>
        <i class="fa-solid fa-trash"></i>
      <% end %></li></h2>
  <% end %>
  <%= render 'shared/bottom_nav' %>
</div>
